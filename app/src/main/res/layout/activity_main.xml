<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:elevation="10dp"
            android:background="@color/white"
            tools:ignore="MissingConstraints">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:gravity="center|right">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center|left">

                <androidx.appcompat.widget.SearchView
                        android:id="@+id/editMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/search_edit_text"
                        android:ems="10"
                        app:queryHint="Cari disini......."/>
                <!--android:hint="Cari disini........"-->
                <!--android:drawableLeft="@drawable/ic_search"-->
                <!--android:gravity="start"/>-->

            </LinearLayout>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:orientation="vertical">

        <TextView android:id="@+id/tvFilter"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawableLeft="@drawable/ic_filter_list"
                  android:drawablePadding="10dp"
                  android:text="FILTER"
                  android:textStyle="bold"
                  android:textSize="16dp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:orientation="vertical">

        <CheckedTextView
                android:id="@+id/ctv_lokasiterdekat"
                android:layout_width="@dimen/width_checked_tv"
                android:layout_height="wrap_content"
                android:background="@drawable/outline_stroke"
                android:text="Lokasi Terdekat"/>

        <CheckedTextView
                android:layout_width="@dimen/width_checked_tv"
                android:layout_height="wrap_content"
                android:background="@drawable/outline_stroke"
                android:layout_marginTop="15dp"
                android:text="Sekarang Buka"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15dp">

            <CheckedTextView
                    android:layout_width="@dimen/width_checked_tv"
                    android:layout_height="wrap_content"
                    android:background="@drawable/outline_stroke"
                    android:layout_marginRight="30dp"
                    android:text="Harga Terendah"/>

            <CheckedTextView
                    android:layout_width="@dimen/width_checked_tv"
                    android:layout_height="wrap_content"
                    android:background="@drawable/outline_stroke"
                    android:text="Harga Tertinggi"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15dp">

            <CheckedTextView
                    android:layout_width="@dimen/width_checked_tv"
                    android:layout_height="wrap_content"
                    android:background="@drawable/outline_stroke"
                    android:layout_marginRight="30dp"
                    android:text="Vinyl"/>

            <CheckedTextView
                    android:layout_width="@dimen/width_checked_tv"
                    android:layout_height="wrap_content"
                    android:background="@drawable/outline_stroke"
                    android:text="Sintetis"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_marginTop="245dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <Button android:id="@+id/btnBatal"
                android:background="@drawable/outline_no_radius"
                android:layout_width="@dimen/width_btn_search"
                android:layout_height="wrap_content"
                android:text="BATAL"/>

        <Button android:id="@+id/btnCari"
                android:background="@drawable/outline_no_radius"
                android:layout_width="@dimen/width_btn_search"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="CARI"/>

    </LinearLayout>

</LinearLayout>