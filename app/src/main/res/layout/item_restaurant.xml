<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/placeImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#757575"
        android:scaleType="centerCrop"
        android:src="@drawable/food_1" />

    <TextView
        android:id="@+id/placeName"
        style="@style/AppTheme.Subheader"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/placeImage"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-2dp"
        android:layout_marginRight="58dp"
        android:layout_marginBottom="4dp"
        android:layout_toLeftOf="@+id/placePrice"
        android:layout_toRightOf="@+id/placeImage"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Foo's Bar" />

    <TextView
        android:id="@+id/openHour"
        style="@style/AppTheme.Caption"
        android:layout_width="71dp"
        android:layout_height="38dp"
        android:layout_below="@+id/placePrice"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/placeDistance"
        android:layout_toRightOf="@+id/placeDistance"
        android:gravity="center_vertical"
        android:textColor="@color/greyDisabled"
        tools:text="08.00 - 23.00" />

    <TextView
        android:id="@+id/placeDistance"
        style="@style/AppTheme.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/placeName"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/placeImage"
        android:textColor="@color/greySecondary"
        tools:text="San Francisco" />

    <TextView
        android:id="@+id/placePrice"
        style="@style/AppTheme.Caption"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textAlignment="textEnd"
        android:textColor="@color/greySecondary"
        tools:text="$$$" />

</RelativeLayout>
